<p id="notice"><%= notice %></p>
 <div class="container">
				<div class="col-md-16">
                  <div class="panel panel-primary">
                    <div class="panel panel-heading">
                      <span class="glyphicon glyphicon-search"></span> Listing Orders
					  </div>


<table>
  <thead>
    <tr>
      <th>Appartment</th>
      <th>Street</th>
      <th>City</th>
      <th>Postalcode</th>
      <th>Province</th>
      <th>Size</th>
      <th>Vegtoppings</th>
      <th>Nonvegtoppings</th>
      <th>Crust</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.Appartment %></td>
          <td><%= order.Street %></td>
          <td><%= order.City %></td>
          <td><%= order.PostalCode %></td>
          <td><%= order.Province %></td>
          <td><%= order.Size %></td>
          <td><%= order.VegToppings %></td>
          <td><%= order.NonVegToppings %></td>
          <td><%= order.Crust %></td>
          <td><%= order.Price %></td>
          
          
        
          <td><%= link_to 'Show', order ,:class =>'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_order_path(order) ,:class =>'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn btn-primary' %></td>
        </tr>
      <% end %>
    
    
    
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path ,:class =>'btn btn-primary'%>
